<div class="container signinsfondo" style="margin-top: 100px; margin-bottom: 1cm; height: 80vh;">
    <div class="row">
        <div class="main">
            <h3>Effettua il login o <a href="/user/signup">iscriviti</a> <img src="https://orjey.in/v-admin/v-resources/images/login.gif" style="width: 3cm;"></h3>
            
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12">
                    <a href="/users/auth/facebook" class="btn btn-lg btn-info btn-block btn-facebook"
                        style="background-color: #3b5999!important;">
                        <span class="fa fa-facebook float-left mt-1"></span> Facebook</a>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-12 mt-1">
                    <a href="/users/auth/google_oauth2" class="btn btn-google btn-lg btn-info btn-block ">
                        <span class="fa fa-google float-left mt-1"></span>Google</a>
                </div>
            </div>
            <div class="login-or">
                <hr class="hr-or">
                <span class="span-or">o</span>
            </div>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => { :style => "text-align:center;" }) do |f| %>
              <div class="form-group" style="text-align: center;">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", :required=>true, class: "form-control" %>
              </div>

              <div class="form-group" style="text-align: center;">
                <%= f.label :password %><br />
                <%= f.password_field :password, autocomplete: "current-password", :required=>true, class: "form-control", id: "inputPassword" %>
              </div>

              <% if devise_mapping.rememberable? %>
                <div class="form-group">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <% end %>

              <div class="actions">
                <%= f.submit "Log in", class: "btn btn-primary" %>
              </div>
            <% end %>



            <p class="mt-3">Non hai un account? <a href="/users/sign_up">Registrati ora!</a></p>

            
        </div>
    </div>
    
</div>
